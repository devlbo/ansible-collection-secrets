---
extends: default

ignore: |
  .github/
  .venv/
  changelogs/

rules:
  line-length:
    max: 80
    level: warning
  truthy:
    allowed-values:
      - "true"
      - "false"
    check-keys: false
  comments:
    require-starting-space: true
    ignore-shebangs: true
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
